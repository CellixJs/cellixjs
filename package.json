{
  "name": "cellixjs",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "author": "CellixJS",
  "license": "MIT",
  "packageManager": "npm@11.5.2",
  "main": "apps/api/dist/src/index.js",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "dev": "npm run build && turbo run azurite start --parallel",
    "start": "turbo run build && concurrently npm:start:* --kill-others-on-fail --workspace=@ocom/api",
    "format": "turbo run format",
    "gen": "turbo run gen",
    "tsbuild": "tsc --build",
    "tswatch": "tsc --build --watch",
    "clean": "npm install && turbo run clean && rimraf dist node_modules package-lock.json **/coverage",
    "start:api": "npm run start --workspace=@ocom/api",
    "start:ui-community": "npm run dev --workspace=@ocom/ui-community",
    "start-emulator:mongo-memory-server": "npm run start --workspace=@cellix/mock-mongodb-memory-server",
    "start-emulator:auth-server": "npm run start --workspace=@cellix/mock-oauth2-server",
    "test:all": "turbo run test:all",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:merge": "npm run test:coverage && npm run merge-lcov-reports",
    "merge-lcov-reports": "node scripts/merge-coverage.js",
    "test:integration": "turbo run test:integration",
    "test:serenity": "turbo run test:serenity",
    "test:unit": "turbo run test:unit",
    "test:watch": "turbo run test:watch --concurrency 15"
  },
  "workspaces": [
    "apps/api",
    "apps/docs",
    "apps/ui-community",
    "packages/cellix/api-services-spec",
    "packages/cellix/domain-seedwork",
    "packages/cellix/event-bus-seedwork-node",
    "packages/cellix/mock-mongodb-memory-server",
    "packages/cellix/mock-oauth2-server",
    "packages/cellix/mongoose-seedwork",
    "packages/cellix/typescript-config",
    "packages/cellix/ui-core",
    "packages/cellix/vitest-config",
    "packages/ocom/application-services",
    "packages/ocom/context-spec",
    "packages/ocom/data-sources-mongoose-models",
    "packages/ocom/domain",
    "packages/ocom/event-handler",
    "packages/ocom/graphql",
    "packages/ocom/persistence",
    "packages/ocom/rest",
    "packages/ocom/service-blob-storage",
    "packages/ocom/service-mongoose",
    "packages/ocom/service-otel",
    "packages/ocom/service-token-validation",
    "packages/ocom/ui-components"
  ],
  "devDependencies": {
    "@amiceli/vitest-cucumber": "^5.1.2",
    "@biomejs/biome": "2.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "azurite": "^3.35.0",
    "concurrently": "^9.1.2",
    "rimraf": "^6.0.1",
    "ts-scope-trimmer-plugin": "^1.0.2",
    "tsx": "^4.20.3",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
