{
  "name": "cellixjs",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "author": "CellixJS",
  "license": "MIT",
  "packageManager": "npm@10.9.3",
  "main": "packages/api/dist/src/index.js",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "start": "turbo run build && concurrently npm:start:* --kill-others-on-fail --workspace=@ocom/api",
    "build:affected": "turbo run build --filter='[HEAD^1]'",
    "lint:affected": "turbo run lint --filter='[HEAD^1]'",
    "format": "turbo run format",
    "gen": "turbo run gen",
    "tsbuild": "tsc --build",
    "tswatch": "tsc --build --watch",
    "clean": "npm install && turbo run clean && rimraf dist node_modules package-lock.json **/coverage",
    "start:api": "npm run start --workspace=@ocom/api",
    "start:ui-community": "npm run dev --workspace=@ocom/ui-community",
    "start-emulator:mongo-memory-server": "cd packages/service-mongodb-memory-server && npm install && npm run build && npm run start",
    "start-emulator:auth-server": "cd packages/service-oauth2-mock-server && npm install && npm run build && npm run start",
    "test:affected": "turbo run test --filter='[HEAD^1]'",
    "test:all": "turbo run test:all",
    "test:coverage": "turbo run test:coverage",
    "test:coverage:affected": "turbo run test:coverage --filter='[HEAD^1]'",
    "test:integration": "turbo run test:integration",
    "test:serenity": "turbo run test:serenity",
    "test:unit": "turbo run test:unit",
    "test:watch": "node scripts/test-watch-all.js",
    "azurite:blob": "azurite-blob --silent --location ./__blobstorage__",
    "azurite:queue": "azurite-queue --silent --location ./__queuestorage__",
    "azurite:table": "azurite-table --silent --location ./__tablestorage__"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@amiceli/vitest-cucumber": "^5.1.2",
    "@biomejs/biome": "2.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "azurite": "^3.35.0",
    "concurrently": "^9.1.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
