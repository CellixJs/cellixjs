{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "apps/api": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    },
    "apps/ui-community": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "apps/docs": {
      "entry": ["src/**/*.{ts,tsx,js,jsx}"],
      "project": ["src/**/*.{ts,tsx,js,jsx}"]
    },
    "packages/cellix/*": {
      "project": ["src/**/*.ts"]
    },
    "packages/ocom/*": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignore": [
        "**/graphql-tools-scalars.ts"
      ]
    },
    "packages/ocom/ui-components": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/ocom/domain/*": {
        "project": ["src/**/*.ts", "tests/**/*.ts"]
    }
  },
  "ignoreWorkspaces": ["packages/cellix/typescript-config"],
  "ignore": [
    "build-pipeline/scripts/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.tsx",
    "**/dist/**",
    "**/coverage/**",
    "**/__tests__/**"
  ],
  "ignoreDependencies": [
    "@types/*",
    "@cucumber/node",
    "@cucumber/pretty-formatter",
    "@serenity-js/assertions",
    "@serenity-js/console-reporter",
    "@serenity-js/core",
    "@serenity-js/cucumber",
    "@serenity-js/serenity-bdd",
    "ts-scope-trimmer-plugin"
  ],
  "ignoreBinaries": ["func"]
}
