{
  "name": "@cellix/graphql-core",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Shared, reusable GraphQL utilities for Cellix framework",
  "files": [
    "dist",
    "src/schema/**/*.graphql"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "prebuild": "biome lint",
    "build": "tsc --build",
    "watch": "tsc --watch",
    "lint": "biome lint",
    "test": "vitest run --silent --reporter=dot",
    "test:coverage": "vitest run --coverage --silent --reporter=dot",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.2"
  },
  "devDependencies": {
    "@cellix/typescript-config": "workspace:*",
    "@cellix/vitest-config": "workspace:*",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
