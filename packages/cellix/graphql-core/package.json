{
  "name": "@cellix/graphql-core",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Shared, reusable GraphQL utilities for Cellix framework",
  "files": [
    "dist",
    "src/schema/**/*.graphql"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "prebuild": "biome lint",
    "build": "tsc --build",
    "watch": "tsc --watch",
    "lint": "biome lint",
    "test": "vitest run --silent --reporter=dot",
    "test:coverage": "vitest run --coverage --silent --reporter=dot",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.1",
    "@graphql-tools/schema": "^10.0.25",
    "@graphql-tools/utils": "^10.0.13",
    "graphql": ">16.0.0",
    "graphql-scalars": "^1.24.2"
  },
  "devDependencies": {
    "@cellix/typescript-config": "workspace:*",
    "@cellix/vitest-config": "workspace:*",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.1",
    "@graphql-tools/schema": "^10.0.25",
    "@graphql-tools/utils": "^10.0.13",
    "graphql": "catalog:",
    "graphql-scalars": "^1.24.2",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
