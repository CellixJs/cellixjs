{
  "name": "@cellix/mongoose-seedwork",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "prebuild": "biome lint",
    "build": "tsc --build",
    "watch": "tsc --watch",
      "test": "vitest run --silent --reporter=dot",
      "test:coverage": "vitest run --coverage --silent --reporter=dot",
      "test:integration": "vitest run integration.test.ts --silent --reporter=dot",
    "test:unit": "vitest run --exclude tests/integration/**/*.test.ts --silent --reporter=dot",
    "test:watch": "vitest --silent --reporter=dot",
    "lint": "biome lint",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@cellix/domain-seedwork": "workspace:*",
    "@cellix/event-bus-seedwork-node": "workspace:*"
  },
  "peerDependencies": {
    "mongoose": "^8.0.0",
    "mongodb": "^6.0.0"
  },
  "devDependencies": {
    "@cellix/typescript-config": "workspace:*",
    "@cellix/vitest-config": "workspace:*",
    "mongoose": "catalog:",
    "mongodb": "catalog:",
    "mongodb-memory-server": "^10.1.4",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
