	"description": "",
	"type": "module",
	"main": "dist/src/index.js",
	"types": "dist/src/index.d.ts",
	"scripts": {
		"build": "tsc --build",
		"clean": "rimraf dist node_modules tsconfig.tsbuildinfo && tsc --build --clean",
		"lint": "biome lint",
		"format": "biome format --write",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
        "test:serenity": "cucumber-js --require-module tsx/cjs --require './tests/acceptance/support/serenity.config.ts' --require './tests/acceptance/step-definitions/**/*.ts' './tests/acceptance/features/**/*.feature' --format @serenity-js/cucumber --format json:target/site/serenity/cucumber-report.json --format html:target/site/serenity/cucumber-report.html --format summary",
        "test:unit": "vitest run --exclude tests/**/*.test.ts",
        "test:watch": "vitest",
		"prebuild": "biome lint"
	},
	"peerDependencies": {
		"@cellix/domain-seedwork": "^1.0.0",
		"@cellix/event-bus-seedwork-node": "^1.0.0"
	},
	"dependencies": {
		"@lucaspaganini/value-objects": "^1.3.1"
	},
	"devDependencies": {
		"@cucumber/cucumber": "^11.3.0",
		"@cucumber/node": "^0.4.0",
		"@cucumber/pretty-formatter": "^1.0.1",
		"@serenity-js/assertions": "^3.32.3",
		"@serenity-js/console-reporter": "^3.32.3",
		"@serenity-js/core": "^3.32.3",
		"@serenity-js/cucumber": "^3.32.3",
		"@serenity-js/serenity-bdd": "^3.32.3",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3"
	}
