{
  "name": "@ocom/graphql-handler",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Azure Functions HTTP integration for GraphQL",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "prebuild": "biome lint",
    "build": "tsc --build",
    "watch": "tsc --watch",
    "lint": "biome lint",
    "test": "vitest run --silent --reporter=dot",
    "test:coverage": "vitest run --coverage --silent --reporter=dot",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@apollo/utils.withrequired": "^3.0.0",
    "@azure/functions": "catalog:",
    "@ocom/application-services": "workspace:*",
    "@ocom/graphql": "workspace:*",
    "@ocom/service-apollo-server": "workspace:*",
    "graphql": "^16.10.0"
  },
  "devDependencies": {
    "@cellix/typescript-config": "workspace:*",
    "@cellix/vitest-config": "workspace:*",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
