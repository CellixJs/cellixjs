{
  "name": "@ocom/graphql",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "src/schema/**/*.graphql"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "test": "vitest run --silent --reporter=dot",
    "test:coverage": "vitest run --coverage --silent --reporter=dot",
    "test:watch": "vitest --silent --reporter=dot",
     "prebuild": "biome lint",
     "build": "tsc --build",
     "watch": "tsc --watch",
     "lint": "biome lint",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@apollo/utils.withrequired": "^3.0.0",
    "@azure/functions": "^4.0.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.1",
    "@graphql-tools/schema": "^10.0.25",
    "@ocom/application-services": "workspace:*",
    "@ocom/domain": "workspace:*",
    "graphql": "^16.10.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-middleware": "^6.1.35",
    "graphql-scalars": "^1.24.2"
  },
  "devDependencies": {
    "@cellix/typescript-config": "workspace:*",
    "@cellix/vitest-config": "workspace:*",
    "@types/graphql-depth-limit": "^1.1.6",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
