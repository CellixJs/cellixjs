{
  "name": "@ocom/graphql",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "src/schema/**/*.graphql"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "scripts": {
    "prebuild": "biome lint",
    "build": "tsc --build",
    "watch": "tsc --watch",
    "lint": "biome lint",
    "test": "vitest run --silent --reporter=dot",
    "test:coverage": "vitest run --coverage --silent --reporter=dot",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@cellix/graphql-core": "workspace:*",
    "@graphql-tools/load-files": "^7.0.1",
    "@ocom/application-services": "workspace:*",
    "@ocom/domain": "workspace:*",
    "graphql": "catalog:"
  },
  "devDependencies": {
    "@cellix/typescript-config": "workspace:*",
    "@cellix/vitest-config": "workspace:*",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
